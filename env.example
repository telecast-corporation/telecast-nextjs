# Google Cloud Configuration
# Copy this file to .env.local and fill in your actual values

# Your Google Cloud Project ID
GOOGLE_CLOUD_PROJECT_ID=your-project-id-here

# Service Account Email (from the JSON key file)
GOOGLE_CLOUD_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Service Account Private Key (from the JSON key file)
# Make sure to include the \n characters for line breaks
GOOGLE_CLOUD_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Content Here\n-----END PRIVATE KEY-----\n"

# Storage Bucket Names
GOOGLE_CLOUD_PODCAST_BUCKET_NAME=your-podcast-bucket-name
GOOGLE_CLOUD_PROFILE_BUCKET_NAME=your-profile-bucket-name

# Other required environment variables for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Auth0 Configuration
AUTH0_SECRET=your-auth0-secret
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Database
DATABASE_URL=your-database-url

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_PRICE_ID=your-stripe-price-id

# API Keys
YOUTUBE_API_KEY=your-youtube-api-key
GOOGLE_BOOKS_API_KEY=your-google-books-api-key
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret
PODCASTINDEX_API_KEY=your-podcastindex-api-key
PODCASTINDEX_API_SECRET=your-podcastindex-api-secret
NEWS_API_KEY=your-news-api-key
